<!DOCTYPE html>
<html lang="en">

<%- include(`./partials/head.ejs`);%>

<title>Product List</title>

<body>
        <nav>
                <a href="/products/new">Add a New Product</a>
        </nav>

        <h1>Shop</h1>

        <% Product.forEach(Product => { %>

        <a href="products/<%=Product._id; %>">


                <h3><%=Product.name; %></h3>
                <img src=<%= Product.img %> />
                <%=Product.price; %>
        </a>

        <form action="/products/<%=Product.id %>?_method=DELETE" method="POST">

                <input type="submit" value="DELETE" />
        </form>
        <a href="/products/<%=Product._id %>/edit">Edit</a>

        <% }) %>

</body>
</body>

</html>